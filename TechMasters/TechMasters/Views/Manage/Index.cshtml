@model TrabalhoPartico.Models.IndexViewModel
@using Microsoft.AspNet.Identity
@using TrabalhoPartico.Models
@{
    ViewBag.Title = "Definições de conta";
}

<h2>@ViewBag.Title.</h2>
<br />
<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Gerir sua conta</h4>
    <br />
    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Mude a sua password", "ChangePassword", null, new { @class = "btn btn-sm btn-primary" })
            }
            else
            {
                @Html.ActionLink("Criar password", "SetPassword", null, new { @class = "btn btn-sm btn-primary" })
            }
            <br />
            <br />
        </dd>
        <dt>
            Compras:
        </dt>
        <dd>
            @Html.ActionLink("Suas compras", "Compras", new { id = new ApplicationDbContext().Clientes.Find(User.Identity.GetUserId()).Id }, new { @class = "btn btn-sm btn-primary" })
        </dd>
