@model TrabalhoPartico.Models.Produto

@{
    ViewBag.Title = "Apagar Produto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<br />
<h3>Tem a certeza que dejesa apagar?</h3>
<div>
    <h4>Produto</h4>
    <br />
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            Preço
        </dt>

        @{
            var test = Model.Preco * (1 - Model.Desconto);
            <dd>
                @test €
                @if (Model.Desconto > 0)
                {
                    <br />
                    <s>@Model.Preco €</s>
                }
            </dd>
        }

        @if (Model.Desconto > 0)
        {
            <dt>
                Desconto
            </dt>

            var test2 = Model.Desconto * 100;
            <dd>
                @test2 %
            </dd>
        }

        <dt>
            Quantidade em Stock
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stock)
        </dd>

        <dt>
            Descrição
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            URL da Imagem
        </dt>

        <dd>
            <img src="@Model.UrlImg" style="height: 200px; border:solid 1px" />
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <br />
        <div class="form-actions no-color">
            <input type="submit" value="Apagar" class="btn btn-sm btn-danger" /> |
            @Html.ActionLink("Voltar Atrás", "Index", null, new { @class = "btn btn-sm btn-default" })
        </div>
    }
</div>
