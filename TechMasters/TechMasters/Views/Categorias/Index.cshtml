@model IEnumerable<TrabalhoPartico.Models.Categoria>

@{
    ViewBag.Title = "Gerir as Categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<br />

<p>
    @Html.ActionLink("Nova Categoria", "Create", null, new { @class = "btn btn-sm btn-success" }) |
    @Html.ActionLink("Voltar Atrás", "../Gerir/Index", null, new { @class = "btn btn-sm btn-warning" })
</p>

<br />
<table class="table table-striped">
    <tr>
        <th>
            Nome da Categoria
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-info" }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-default" }) |
                @Html.ActionLink("Apagar", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
            </td>
        </tr>
    }

</table>
